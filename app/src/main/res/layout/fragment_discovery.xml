<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/mybeijing"
        android:gravity="center"
        android:orientation="vertical">


        <project01.shoujioa.Utils.CircleImageView
            android:id="@+id/head_image_m"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:src="@mipmap/male"
            />

        <TextView
            android:id="@+id/head_name_text"
           android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"
            android:textSize="15sp" />

    </LinearLayout>



    <RelativeLayout
        android:id="@+id/imitate_lx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/practice"
            style="@style/register_picture"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/practiceown" />

        <TextView
            style="@style/register_picture"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/practice"
            android:text="个人信息"
            android:textColor="#2C2C2C"
            android:textSize="15sp" />

        <ImageView
            style="@style/register_picture"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="2dp"
            android:src="@mipmap/right" />
    </RelativeLayout>

    <View
        style="@style/singlet_line"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />

    <RelativeLayout
        android:id="@+id/relayoutWdxz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/practice2"
            style="@style/register_picture"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/xiazai" />

        <TextView
            style="@style/register_picture"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/practice2"
            android:text="我的"
            android:textColor="#2C2C2C"
            android:textSize="15sp" />

        <ImageView
            style="@style/register_picture"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="2dp"
            android:src="@mipmap/right" />
    </RelativeLayout>

    <View
        style="@style/singlet_line"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />

    <RelativeLayout
        android:id="@+id/RelativeSz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/practice3"
            style="@style/register_picture"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/setting_up" />

        <TextView
            style="@style/register_picture"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/practice3"
            android:text="设置"
            android:textColor="#2C2C2C"
            android:textSize="15sp" />

        <ImageView
            style="@style/register_picture"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="2dp"
            android:src="@mipmap/right" />
    </RelativeLayout>

    <View
        style="@style/singlet_line"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />

    <Button
        android:id="@+id/quit_button"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="130dp"
        android:background="@mipmap/quit_button_two" />






</LinearLayout>
