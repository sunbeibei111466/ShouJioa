<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/includeone"
        layout="@layout/gw_title_main" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:background="#f91f14"
                android:padding="0.1dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_30"
                    android:layout_weight="1.2"
                    android:background="#fff"
                    android:gravity="center"
                    android:text="姓名"
                    android:textColor="#000"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginLeft="0.2dp"
                    android:layout_weight="3"
                    android:background="#fff"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:background="#f91f14"
                android:padding="0.1dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginLeft="0.2dp"
                    android:layout_weight="1.2"
                    android:background="#fff"
                    android:gravity="center"
                    android:text="性质"
                    android:textColor="#000"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/xz"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginLeft="0.2dp"
                    android:layout_weight="3"
                    android:background="#fff"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:background="#f91f14"
                android:padding="0.1dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginLeft="0.2dp"
                    android:layout_weight="1.2"
                    android:background="#fff"
                    android:gravity="center"
                    android:text="转办人"
                    android:textColor="#000"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/zbr"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginLeft="0.2dp"
                    android:layout_weight="3"
                    android:background="#fff"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="@dimen/sp_15"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:background="#f91f14"
                android:padding="0.1dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_30"
                    android:layout_weight="1.2"
                    android:background="#fff"
                    android:gravity="center"
                    android:text="联系方式及地址"
                    android:textColor="#000"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/lxfs"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginLeft="0.2dp"
                    android:layout_weight="3"
                    android:background="#fff"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="1"
                    android:paddingLeft="@dimen/dp_4"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:background="#f91f14"
                android:padding="0.1dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_30"
                    android:layout_weight="1.2"
                    android:background="#fff"
                    android:gravity="center"
                    android:text="反应时间及方式"
                    android:textColor="#000"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/fysj"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginLeft="0.2dp"
                    android:layout_weight="3"
                    android:background="#fff"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="1"
                    android:paddingLeft="@dimen/dp_4"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_130"
                android:background="#f91f14"
                android:orientation="horizontal"
                android:padding="@dimen/dp_1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:background="#fff"
                    android:gravity="center"
                    android:text="内容摘要"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/nrzy"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_1"
                    android:layout_weight="3"
                    android:background="#fff"
                    android:ellipsize="end"
                    android:lines="8"
                    android:paddingLeft="@dimen/dp_2"
                    android:text=""
                    android:textColor="#000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_150"
                android:background="#f91f14"
                android:orientation="vertical"
                android:padding="@dimen/dp_1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#fff"
                    android:gravity="center"
                    android:text="拟办意见"
                    android:textColor="#000" />

                <FrameLayout
                    android:layout_marginTop="@dimen/dp_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    >

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/nbnr_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />
                        <EditText
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:hint="请输入内容"
                            android:id="@+id/nbyj_edittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:paddingLeft="@dimen/dp_2"
                            android:text=""
                            android:textColor="#000" />

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_150"
                android:background="#f91f14"
                android:orientation="vertical"
                android:padding="@dimen/dp_1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#fff"
                    android:gravity="center"
                    android:text="领导批示"
                    android:textColor="#000" />

                <FrameLayout
                    android:layout_marginTop="@dimen/dp_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    >

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/ldps_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                       />

                        <EditText
                            android:hint="请输入内容"
                            android:id="@+id/ldps_edittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:paddingLeft="@dimen/dp_2"
                            android:text=""
                            android:textColor="#000" />

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_150"
                android:background="#f91f14"
                android:orientation="vertical"
                android:padding="@dimen/dp_1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#fff"
                    android:gravity="center"
                    android:text="科室办理意见"
                    android:textColor="#000" />

                <FrameLayout
                    android:layout_marginTop="@dimen/dp_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    android:focusable="true"
                    android:focusableInTouchMode="true"

                    >

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/ksbl_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                         />

                        <EditText
                            android:hint="请输入内容"
                            android:id="@+id/ksblyi_edittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:paddingLeft="@dimen/dp_2"
                            android:text=""
                            android:textColor="#000" />

                </FrameLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/zgld"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="#f91f14"
                android:padding="0.1dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:background="#fff"
                    android:gravity="center"
                    android:text="选择主管领导:"
                    android:textColor="#000"
                    android:textSize="@dimen/sp_14" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0.2dp"
                    android:layout_weight="3"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/xzld_text"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:textSize="@dimen/dp_10" />

                    <Button
                        android:id="@+id/xzld_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:background="@drawable/bg_edittext"
                        android:onClick="onClick"
                        android:text="搜索"
                        android:textSize="@dimen/sp_10" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/zgkz"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="#f91f14"
                android:padding="0.1dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_50"
                    android:layout_weight="1.2"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:text="选择主管科长:"
                    android:textColor="#000"
                    android:textSize="@dimen/sp_14" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0.2dp"
                    android:layout_weight="3"
                    android:background="#fff"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/xzks_text"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:textSize="@dimen/dp_10" />

                    <Button
                        android:id="@+id/xzks_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:background="@drawable/bg_edittext"
                        android:onClick="onClick"
                        android:text="搜索"
                        android:textSize="@dimen/sp_10" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/zgky"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="#f91f14"
                android:padding="0.1dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_50"
                    android:layout_weight="1.2"
                    android:background="#fff"
                    android:gravity="center"
                    android:text="选择科员:"
                    android:textColor="#000"
                    android:textSize="@dimen/sp_14" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0.2dp"
                    android:layout_weight="3"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/xzky_text"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:textSize="@dimen/dp_10" />

                    <Button
                        android:id="@+id/xzky_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:background="@drawable/bg_edittext"
                        android:onClick="onClick"
                        android:text="搜索"
                        android:textSize="@dimen/sp_10" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:background="#f91f14"
                android:padding="0.1dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_30"
                    android:layout_weight="1.2"
                    android:background="#fff"
                    android:gravity="center"
                    android:text="备注"
                    android:textColor="#000"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/bz"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginLeft="0.2dp"
                    android:layout_weight="3"
                    android:background="#fff"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:paddingLeft="@dimen/dp_4"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f91f14"
                android:padding="0.1dp"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:layout_weight="1.2"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:text="附件"
                    android:textColor="#000"
                    android:textSize="@dimen/sp_14" />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/fj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:padding="@dimen/dp_1"
                  />
            </LinearLayout>

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/border_line_while"
                android:button="@null"
                android:gravity="center"
                android:onClick="onClick"
                android:text="返回" />

            <Button
                android:id="@+id/bc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/border_line_while"
                android:button="@null"
                android:gravity="center"
                android:onClick="onClick"
                android:text="提交" />
        </LinearLayout>

    </ScrollView>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>