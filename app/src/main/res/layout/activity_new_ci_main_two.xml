<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dp_10"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="#fff"
    >
    <include
        android:id="@+id/includeone"
        layout="@layout/title_main"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dp_10"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:orientation="horizontal"
            android:padding="0.2dp">

            <TextView
                android:gravity="center"
                android:id="@+id/tv_bt_id"
                android:paddingLeft="@dimen/dp_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="0.2dp"
                android:layout_weight="3"
                android:background="#fff"
                android:textColor="#000"
                android:textSize="@dimen/sp_20"
                android:text="2018年国庆值班安排"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/zgld"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0.1dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_weight="2"
                android:gravity="right"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_30"
                android:text="拟题人: "
                android:background="#fff"
                android:textSize="@dimen/sp_12"
                android:textColor="#47837c"
                />
                <TextView
                    android:gravity="center"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textSize="@dimen/dp_12"
                    android:id="@+id/editText"
                    android:textColor="#47837c"
                    />
            <TextView
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_30"
                android:layout_weight="1.5"
                android:text="拟稿单位: "
                android:background="#fff"
                android:textSize="@dimen/sp_12"
                android:textColor="#47837c"
                />
            <TextView
                android:ellipsize="end"
                android:singleLine="true"
                android:textStyle="bold"
                android:gravity="left|center_vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="@dimen/dp_12"
                android:id="@+id/xzks_text"
                android:textColor="#47837c"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="0.1dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            >
                <TextView
                    android:paddingLeft="10dp"
                    android:id="@+id/edid_id"
                    android:singleLine="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0.1dp"
                    android:background="#fff"
                    android:textColor="#000"
                    android:textSize="@dimen/sp_17"
                    />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0.1dp"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_5"
            >
            <TextView
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="    附件:"
                android:background="#fff"
                android:textSize="@dimen/sp_15"
                android:textColor="#000"
                />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/RecyclerView_filename"
                android:gravity="center_vertical"
                android:layout_marginLeft="0.2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:paddingLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                />
        </LinearLayout>
        <Button
            android:layout_margin="@dimen/dp_10"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:text="返回"
            android:onClick="onClick"
            android:id="@+id/btn_login"
            android:background="@drawable/border_line_while"
            />
    </LinearLayout>
    </ScrollView>
</LinearLayout>




