<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff"
        >
        <include
            android:id="@+id/includeone"
            layout="@layout/gw_title_main" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_5">
            <!--内容-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <!--来问单位-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:background="#fff"
                    android:layout_marginTop="@dimen/dp_1"
                    android:paddingLeft="@dimen/dp_1"
                    android:paddingRight="@dimen/dp_1"
                    android:paddingBottom="@dimen/dp_1"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_30"
                        android:background="#fff"
                        android:gravity="center_vertical"
                        android:text="来文单位: "
                        android:textColor="#f70606"
                        android:textSize="@dimen/sp_10" />

                    <TextView
                        android:textColor="#000"
                        android:id="@+id/laiwendanwei"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_30"
                        android:layout_weight="4.5"
                        android:background="#fff"
                        android:gravity="center_vertical"
                        android:text="北京市卫计委"
                        android:textSize="@dimen/dp_10"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_30"
                        android:layout_marginLeft="0.2dp"
                        android:background="#fff"
                        android:gravity="center_vertical"
                        android:text="文号:"
                        android:textColor="#f70606"
                        android:textSize="@dimen/sp_10" />

                    <TextView

                        android:textColor="#000"
                        android:id="@+id/wenhao"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_30"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:gravity="center_vertical"
                        android:text="1444"
                        android:paddingLeft="@dimen/dp_2"
                        android:textSize="@dimen/sp_10"
                        android:ellipsize="end"
                        android:lines="2"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f70606"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dp_1"
                    android:paddingLeft="@dimen/dp_1"
                    android:paddingRight="@dimen/dp_1"
                    android:paddingTop="@dimen/dp_1">
                    <!--标题-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="#fff"
                            android:gravity="center_vertical"
                            android:text="    标题:   "
                            android:textColor="#f70606"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#fff"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:lines="2"
                            android:text="fffss"
                            android:textColor="#000"
                            android:textSize="@dimen/sp_15" />
                    </LinearLayout>
                    <!--附件-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="#fff"
                            android:gravity="center_horizontal"
                            android:text="    附件:   "
                            android:textColor="#f70606"
                            android:paddingTop="@dimen/dp_5"
                            android:textSize="@dimen/sp_15" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/RecyclerView_filename"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#fff"
                            android:gravity="center_vertical"
                            android:textColor="#000"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:gravity="right"
                        android:orientation="vertical">

                        <Spinner
                            android:id="@+id/spinner_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:overlapAnchor="false"
                            android:spinnerMode="dialog"
                            />
                    </LinearLayout>
                </LinearLayout>

                <!--拟办意见-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_1"
                    android:paddingRight="@dimen/dp_1"
                    android:paddingBottom="@dimen/dp_1"
                    android:background="#f70606"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="#fff"
                        android:layout_weight="1.2"
                        android:text="协 办 意 见"
                        android:gravity="center"
                        android:textColor="#f70606"
                        android:textSize="@dimen/sp_15"
                        />

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="match_parent"
                        android:background="#fff"
                        android:layout_marginLeft="0.1dp"
                        android:paddingLeft="@dimen/dp_5"
                        >

                        <EditText
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/dp_3"
                            android:id="@+id/xbyj_edit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="请输入评论内容"
                            android:imeOptions="actionDone"
                            android:textSize="@dimen/sp_14"
                            />

                        <android.support.v7.widget.RecyclerView
                            android:paddingLeft="@dimen/dp_3"
                            android:id="@+id/xbyj_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="visible"
                            />
                    </FrameLayout>

                </LinearLayout>
                <!--领导批示-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_1"
                    android:paddingRight="@dimen/dp_1"
                    android:paddingBottom="@dimen/dp_1"
                    android:background="#f70606"
                    >
                    <TextView
                        android:gravity="center"
                        android:background="#fff"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:text="领 导 批 示"
                        android:textColor="#f70606"
                        android:textSize="@dimen/sp_15"
                        />

                    <LinearLayout
                        android:layout_marginLeft="0.1dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="#fff"
                        android:paddingLeft="@dimen/dp_5"
                        android:orientation="vertical"
                        >
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/lips_list"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_60"

                            />
                        <EditText
                            android:gravity="center_vertical"
                            android:id="@+id/lips_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="请输入批示"
                            android:paddingLeft="@dimen/dp_10"
                            android:textColor="#000"
                            android:textSize="@dimen/sp_15"

                            />

                    </LinearLayout>

                </LinearLayout>
                <!--督办-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_1"
                    android:paddingRight="@dimen/dp_1"
                    android:paddingBottom="@dimen/dp_1"
                    android:background="#f70606"
                    >

                    <TextView
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:background="#fff"
                        android:text="督         办"
                        android:textColor="#f70606"
                        android:textSize="@dimen/sp_15" />

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="#fff"
                        android:layout_marginLeft="0.1dp"
                        android:paddingLeft="@dimen/dp_5"
                        >
                        <EditText
                            android:layout_gravity="center"
                            android:id="@+id/db_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="请输入批示"
                            android:paddingLeft="@dimen/dp_10"
                            android:textColor="#000"
                            android:textSize="@dimen/sp_14"

                            />
                        <TextView
                            android:layout_gravity="center"
                            android:id="@+id/db_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/dp_10"
                            android:textSize="@dimen/sp_14"
                            android:ellipsize="end"

                            />
                    </FrameLayout>

                </LinearLayout>
                <!--科室办理意见-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_1"
                    android:paddingRight="@dimen/dp_1"
                    android:paddingBottom="@dimen/dp_1"
                    android:background="#f70606"
                    >
                    <TextView
                        android:gravity="center"
                        android:background="#fff"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:text="科 室 办 理"
                        android:textColor="#f70606"
                        android:textSize="@dimen/sp_15" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="#fff"
                        android:layout_marginLeft="0.1dp"
                        android:paddingLeft="@dimen/dp_5"
                        android:orientation="vertical"
                        >
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/ksyj_list"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_60"
                            />
                        <EditText
                            android:id="@+id/ksyj_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="请输入批示"
                            android:paddingLeft="@dimen/dp_10"
                            android:textColor="#000"
                            android:textSize="@dimen/sp_15"
                            />
                    </LinearLayout>

                </LinearLayout>
                <!--选择科员-->
                <LinearLayout
                    android:id="@+id/zgky"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:background="#f70606"
                    android:padding="1dp"
                    android:visibility="gone"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_50"
                        android:layout_weight="1.2"
                        android:background="#fff"
                        android:gravity="center"
                        android:text="选 择 科 员"
                        android:textColor="#f70606"
                        android:textSize="@dimen/sp_15" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="0.2dp"
                        android:layout_weight="3"
                        android:background="#fff"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/xzky_text"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:textSize="@dimen/dp_10" />

                        <Button
                            android:id="@+id/xzky_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:background="@drawable/bg_edittext"
                            android:onClick="onClick"
                            android:text="搜索"
                            android:textSize="@dimen/sp_10" />
                    </LinearLayout>
                </LinearLayout>

                <!--选择主管领导-->
                <LinearLayout
                    android:id="@+id/zgld"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:paddingLeft="@dimen/dp_1"
                    android:paddingRight="@dimen/dp_1"
                    android:paddingBottom="@dimen/dp_1"
                    android:background="#f70606"
                    android:visibility="gone"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:background="#fff"
                        android:gravity="center"
                        android:text="选择主管领导"
                        android:textColor="#f70606"
                        android:textSize="@dimen/sp_15" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="0.2dp"
                        android:layout_weight="3"
                        android:background="#fff"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/xzld_text"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:textSize="@dimen/dp_10" />

                        <Button
                            android:id="@+id/xzld_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:background="@drawable/bg_edittext"
                            android:onClick="onClick"
                            android:text="搜索"
                            android:textSize="@dimen/sp_10" />
                    </LinearLayout>
                </LinearLayout>
                <!--选择主管科长-->
                <LinearLayout
                    android:id="@+id/zgkz"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:background="#f70606"
                    android:visibility="gone"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:paddingBottom="1dp"
                    >

                    <TextView
                        android:paddingLeft="@dimen/dp_1"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_50"
                        android:layout_weight="1.2"
                        android:background="#fff"
                        android:gravity="center"
                        android:text="选 择 科 长"
                        android:textColor="#f70606"
                        android:textSize="@dimen/sp_15" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="0.2dp"
                        android:layout_weight="3"
                        android:background="#fff"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/xzks_text"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:textSize="@dimen/dp_10" />

                        <Button
                            android:id="@+id/xzks_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:background="@drawable/bg_edittext"
                            android:onClick="onClick"
                            android:text="搜索"
                            android:textSize="@dimen/sp_10" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_70"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_1"
                    android:paddingRight="@dimen/dp_1"
                    android:paddingBottom="@dimen/dp_1"
                    android:background="#f70606"

                    >

                    <TextView
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:background="#fff"
                        android:text="备            注"
                        android:textColor="#f70606"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:paddingLeft="@dimen/dp_5"
                        android:id="@+id/remarks"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="#fff"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="0.1dp"
                        android:text="fffss"
                        android:textColor="#f70606"
                        android:textSize="@dimen/sp_15" />
                </LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_1"
    android:background="#fff"
    ></LinearLayout>
            </LinearLayout>
            <!--提交按钮-->
            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/border_line_while"
                android:button="@null"
                android:gravity="center"
                android:onClick="onClick"
                android:text="提交" />
            <Button
                android:id="@+id/btn_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/border_line_while"
                android:button="@null"
                android:gravity="center"
                android:onClick="onClick"
                android:text="返回" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>